<h1>Shopes#index</h1>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Description</th>
      <th>Price</th>
      <th>Product_Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.brand %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= image_tag product.avatar, width: "200px" if product.avatar.attached?  %></td>
        <td><%= link_to 'Show', shope_path(product.id) %></td>
<td><%= button_to 'Add to cart', line_items_path(id: product.id), class: 'button is-warning add-to-cart' %></td>

       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 


