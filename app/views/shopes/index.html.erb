<hr>
  <% if current_user.role == 'admin' %>
   <%= link_to 'New Product', new_product_path, class: "btn" %>
  <% end %>

<div class="product-index-grid pt4">
  <% @products.each do |product| %>

    <div class="product border-light">
      <div class="product-thumb">
      <%= image_tag product.avatar, width: "200px" if product.avatar.attached?  %>
     
      </div>
       <div class="pa3">

      <h3 class="fw7 f4 title"><%= product.brand %></h3>
      <p class="f3 fw6 has-text-right pt2 price"><%= number_to_currency(product.price) %></p>
    </div>
    <%= link_to 'Show', shope_path(product.id) %>
    <% if current_user.role == 'admin' %>
            <span><%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
            <span><%= link_to 'Edit', edit_product_path(product)  %></span>
            <span><%#= link_to 'Issue', book_path(book) %></span>
            <% end %>
  </div>

  
  <% end %>
</div>



